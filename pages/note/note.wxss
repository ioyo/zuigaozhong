/* pages/note/note.wxss */

.main {
    width: 100vw;
    height: 100vh;
}

.top {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    font-size: 16px;
    background: #ddd;
}

.content {
    width: 100vw;
    height: calc(100vh - 80rpx);
    overflow: hidden;
    white-space: nowrap;
    background: rgba(0, 0, 0, 0.5);
}

.top text {
    margin-right: 15rpx;
}

.title {
    font-size: 16px;
}