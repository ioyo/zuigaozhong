/* pages/note/note.wxss */

.main {
    width: 100vw;
    height: 100vh;
    background: #f5f8fa;
}

.top {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
    font-size: 16px;
    color: #fff;
    background: linear-gradient(to right, #06beb6, #48b1bf);
}

.content {
    display: flex;
    flex-flow: row nowrap;
    box-sizing: border-box;
    justify-content: space-between;
    padding: 20rpx;
    padding-top: 0;
    width: 100vw;
    /* height: calc(100vh - 80rpx); */
    background: #f5f8fa;
    /* overflow: hidden;
    white-space: nowrap; */
}

.top text {
    margin-right: 15rpx;
}

.left {
    width: 48%;
}

.right {
    width: 48%;
}

.right-item {
    margin-top: 30rpx;
    width: 100%;
    /* height: 500rpx; */
    background: #fff;
}

.left-item {
    margin-top: 30rpx;
    width: 100%;
    /* height: 340rpx; */
    background: #fff;
}

.dd {
    width: 100%;
    height: 500rpx;
}

.item {
    box-sizing: border-box;
    padding-bottom: 10rpx;
}

.item .pic {
    width: 100%;
}

.item .title {
    box-sizing: border-box;
    padding: 0 10rpx;
    margin: 0 auto;
    margin-top: 5rpx;
    width: 98%;
    height: 60rpx;
    font-size: 14px;
    color: #333;
}

.item .user {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 0 10rpx;
    width: 98%;
    height: 70rpx;
}

.info {
    display: flex;
    align-items: center;
}

.info image {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
}

.info text {
    margin-left: 15rpx;
    font-size: 14px;
    color: #666;
}

.user .like {
    display: flex;
    align-items: center;
}

.user .like image{
    width: 30rpx;
    height: 30rpx;
}

.user .like text {
    margin-left: 10rpx;
    font-size: 12px;
    color: #999;
}